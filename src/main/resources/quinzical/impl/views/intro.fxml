      <Button layoutX="455.0" layoutY="283.0" mnemonicParsing="false" onAction="#btnNewGamePress" opacity="0.9" prefHeight="56.0" prefWidth="371.0" styleClass="transparent" stylesheets="@../../../css/intro.css" text="New Game">
