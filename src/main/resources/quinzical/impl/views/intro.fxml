            <Font name="System Bold" size="23.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="455.0" layoutY="573.0" mnemonicParsing="false" onAction="#btnOptionsPress" opacity="0.9" prefHeight="56.0" prefWidth="371.0" styleClass="transparent" stylesheets="@../../../css/intro.css" text="Options">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
        <rotationAxis>
            <Point3D />
        </rotationAxis>
    </AnchorPane>
</Scene>
