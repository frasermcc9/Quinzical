<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.impl.multiplayer.MenuController">
   <children>
      <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" styleClass="vbox" stylesheets="@../../../../css/multiplayer.css">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <Label fx:id="lblName" styleClass="title" stylesheets="@../../../../css/multiplayer.css" text="NAME_PLACEHOLDER">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets left="350.0" right="350.0" />
            </VBox.margin>
         </Separator>
         <Button onAction="#btnHost" prefHeight="25.0" prefWidth="300.0" text="Host Game" />
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets left="350.0" right="350.0" />
            </VBox.margin>
         </Separator>
         <Button onAction="#btnBrowse" prefWidth="300.0" text="Browse Games" />
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets left="350.0" right="350.0" />
            </VBox.margin>
         </Separator>
         <TextField fx:id="txtCode" alignment="CENTER" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" promptText="Enter Join Code" styleClass="name-text-field" />
         <Button onAction="#btnJoin" prefHeight="25.0" prefWidth="300.0" text="Join Game" />
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets left="350.0" right="350.0" />
            </VBox.margin>
         </Separator>
         <Button onAction="#btnQuit" prefHeight="25.0" prefWidth="300.0" text="Disconnect" />
      </VBox>
   </children>
</AnchorPane>
