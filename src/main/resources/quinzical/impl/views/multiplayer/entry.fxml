<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.impl.multiplayer.EntryController">
   <children>
      <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" style="-fx-spacing: 30;" styleClass="vbox" stylesheets="@../../../../css/multiplayer.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label alignment="TOP_CENTER" prefHeight="183.0" prefWidth="1099.0" styleClass="intro-title" text="Quinzical Multiplayer">
               <font>
                  <Font size="48.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="-20.0" top="-20.0" />
               </VBox.margin>
            </Label>
            <JFXTextField fx:id="txtName" prefHeight="51.0" prefWidth="854.0" promptText="Username" styleClass="name-field">
               <VBox.margin>
                  <Insets left="400.0" right="400.0" />
               </VBox.margin>
               <effect>
                  <ColorAdjust brightness="0.88" />
               </effect>
            </JFXTextField>
            <JFXPasswordField fx:id="txtPassword" promptText="Password" styleClass="name-field">
               <padding>
                  <Insets left="400.0" right="400.0" />
               </padding>
               <effect>
                  <ColorAdjust brightness="0.88" />
               </effect>
            </JFXPasswordField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <JFXButton minWidth="300.0" onAction="#btnConnect" styleClass="material-button" text="Connect to Multiplayer" />
                  <JFXButton minWidth="300.0" onAction="#btnAccount" styleClass="material-button" text="Create Account" />
               </children>
            </HBox>
            <VBox alignment="CENTER">
               <children>
                  <JFXSpinner fx:id="progressIndicator" />
                  <Label fx:id="lblProgress" styleClass="bright-label" text="Connecting to the Online Service..." />
               </children>
            </VBox>
            <JFXButton onAction="#btnQuitClick" styleClass="material-button" text="Main Menu" />
         </children>
      </VBox>
      <StackPane fx:id="alertPane" mouseTransparent="true" prefHeight="150.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
   <stylesheets>
      <URL value="@../../../../css/global.css" />
      <URL value="@../../../../css/views/multiplayer-base.css" />
   </stylesheets>
</AnchorPane>
