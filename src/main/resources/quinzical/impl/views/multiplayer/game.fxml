<VBox alignment="CENTER" prefHeight="462.0" prefWidth="639.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.impl.multiplayer.GameController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label alignment="TOP_CENTER" prefHeight="88.0" prefWidth="179.0" text="Game">
      <font>
         <Font size="36.0" />
      </font>
   </Label>
   <Label fx:id="lblQuestion" alignment="TOP_CENTER" prefHeight="110.0" prefWidth="537.0" text="QUESTION_PLACEHOLDER" wrapText="true">
      <font>
         <Font size="24.0" />
      </font>
   </Label>
   <Label fx:id="lblPrompt" text="PROMPT_PLACEHOLDER">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <TextField fx:id="txtInput" prefHeight="75.0" prefWidth="599.0" />
   <Button mnemonicParsing="false" onAction="#onSubmitClick" prefHeight="54.0" prefWidth="122.0" text="Submit">
      <font>
         <Font size="24.0" />
      </font>
   </Button>
</VBox>
