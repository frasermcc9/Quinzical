<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.impl.multiplayer.GameEndController">
   <children>
      <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" styleClass="vbox">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <Label alignment="TOP_CENTER" prefHeight="211.0" prefWidth="598.0" styleClass="intro-title" text="The End!">
            <font>
               <Font size="36.0" />
            </font>
         </Label>
         <Label fx:id="lblPoints" styleClass="bright-label" text="POINTS">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <VBox alignment="CENTER">
            <children>
               <Label alignment="BOTTOM_CENTER" prefHeight="53.0" prefWidth="126.0" styleClass="bright-label" text="Winners">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Label>
               <TableView fx:id="tablePlayers" prefHeight="224.0" prefWidth="599.0">
                 <columns>
                   <TableColumn fx:id="columnName" prefWidth="318.0" text="Name" />
                   <TableColumn fx:id="columnPoints" prefWidth="310.0" text="Points" />
                 </columns>
                  <VBox.margin>
                     <Insets left="300.0" right="300.0" />
                  </VBox.margin>
               </TableView>
            </children>
         </VBox>
         <Button mnemonicParsing="false" onAction="#onHomeClick" prefHeight="45.0" prefWidth="108.0" text="Home" />
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../../../../css/global.css" />
      <URL value="@../../../../css/multiplayer.css" />
   </stylesheets>
</AnchorPane>
