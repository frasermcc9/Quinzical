              </columns>
            <VBox.margin>
               <Insets left="300.0" right="300.0" />
            </VBox.margin>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../../../../css/global.css" />
      <URL value="@../../../../css/multiplayer.css" />
   </stylesheets>
</AnchorPane>
