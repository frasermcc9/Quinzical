          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
          <Label alignment="TOP_CENTER" prefHeight="116.0" prefWidth="538.0" styleClass="title" text="Submitted">
              <font>
                  <Font size="36.0" />
              </font>
          </Label>
          <Label fx:id="lblServerAns" alignment="TOP_CENTER" prefHeight="59.0" prefWidth="537.0" styleClass="bright-label" text="Waiting For Round To Be Over..." wrapText="true">
              <font>
                  <Font size="24.0" />
              </font>
          </Label>
          <Label fx:id="lblUserAns" alignment="TOP_CENTER" prefHeight="61.0" prefWidth="537.0" styleClass="bright-label" text="You Answered..." wrapText="true">
